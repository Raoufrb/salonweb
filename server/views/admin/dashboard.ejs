<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>üìä Tableau de Bord ‚Äì Admin</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600&family=Montserrat:wght@300;400;500;600&display=swap">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
  <style>
    :root {
      --primary-color: #9c8378;
      --secondary-color: #eae0d5;
      --accent-color: #c19a6b;
      --text-color: #4a4a4a;
      --light-bg: #f9f7f4;
      --header-font: 'Playfair Display', Georgia, serif;
      --body-font: 'Montserrat', 'Segoe UI', sans-serif;
      --shadow: 0 4px 12px rgba(0,0,0,0.08);
      --card-radius: 16px;
      --transition: all 0.3s ease;
    }
    
    body {
      font-family: var(--body-font);
      background-color: var(--light-bg);
      color: var(--text-color);
      margin: 0;
      padding: 0;
      line-height: 1.6;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }
    
    .salon-header {
      background-color: white;
      box-shadow: 0 2px 15px rgba(0,0,0,0.08);
      padding: 15px 0;
      position: relative;
    }
    
    .salon-header .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo {
      font-family: var(--header-font);
      font-size: 28px;
      color: var(--primary-color);
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .logo i {
      color: var(--accent-color);
    }
    
    .nav-links {
      display: flex;
      gap: 20px;
    }
    
    .nav-link {
      color: var(--text-color);
      text-decoration: none;
      font-weight: 500;
      padding: 5px 10px;
      border-radius: 4px;
      transition: all 0.3s ease;
    }
    
    .nav-link:hover {
      background-color: var(--secondary-color);
      color: var(--primary-color);
    }
    
    .nav-link.active {
      background-color: var(--primary-color);
      color: white;
    }
    
    
    .mobile-menu {
      display: none;
      font-size: 24px;
      color: var(--primary-color);
      background: none;
      border: none;
      cursor: pointer;
    }
    
    .page-title {
      font-family: var(--header-font);
      text-align: center;
      color: var(--primary-color);
      margin: 40px 0 30px;
      font-size: 32px;
      font-weight: 600;
    }
    
    .page-title::after {
      content: "";
      display: block;
      width: 80px;
      height: 3px;
      background-color: var(--accent-color);
      margin: 15px auto;
    }

    .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(12, 1fr);
      gap: 24px;
      margin-bottom: 40px;
    }

    /* Metrics Section */
    .metrics-section {
      grid-column: span 12;
    }

    .dashboard-metrics {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 24px;
    }

    .metric {
      background: white;
      padding: 24px;
      border-radius: var(--card-radius);
      box-shadow: var(--shadow);
      transition: var(--transition);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
    }
    
    .metric:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(156, 131, 120, 0.15);
    }

    .metric-icon {
      font-size: 28px;
      color: var(--accent-color);
      margin-bottom: 12px;
    }

    .metric h2 {
      font-family: var(--header-font);
      font-size: 18px;
      color: var(--primary-color);
      margin-bottom: 10px;
      font-weight: 500;
    }

    .metric p {
      font-size: 26px;
      font-weight: 600;
      color: var(--text-color);
      margin: 0;
    }

    /* Insights Section */
    .insights-section {
      grid-column: span 4;
    }
    
    .chart-section {
      grid-column: span 8;
      background: white;
      border-radius: var(--card-radius);
      padding: 24px;
      box-shadow: var(--shadow);
    }

    .dashboard-insights {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .insight {
      background-color: white;
      padding: 20px;
      border-radius: var(--card-radius);
      box-shadow: var(--shadow);
      transition: var(--transition);
    }
    
    .insight:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(156, 131, 120, 0.15);
    }
    
    .insight-header {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 14px;
    }
    
    .insight-icon {
      font-size: 20px;
      color: var(--accent-color);
    }
    
    .insight h2 {
      font-size: 16px;
      font-weight: 500;
      color: var(--primary-color);
      margin: 0;
    }
    
    .insight p {
      font-size: 22px;
      font-weight: 600;
      color: var(--text-color);
      margin: 0;
    }

    /* Quick Links */
    .quick-links-section {
      grid-column: span 12;
    }
    
    .section-title {
      font-family: var(--header-font);
      font-size: 22px;
      color: var(--primary-color);
      margin-bottom: 20px;
      position: relative;
      padding-left: 15px;
    }
    
    .section-title::before {
      content: "";
      position: absolute;
      left: 0;
      top: 5px;
      height: 70%;
      width: 4px;
      background-color: var(--accent-color);
      border-radius: 4px;
    }

    .dashboard-links {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 20px;
    }

    .btn {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      padding: 14px 18px;
      background-color: var(--primary-color);
      color: white;
      font-weight: 500;
      border-radius: 10px;
      text-decoration: none;
      transition: var(--transition);
      box-shadow: 0 4px 6px rgba(156, 131, 120, 0.2);
    }

    .btn:hover {
      background-color: #876d62;
      transform: translateY(-3px);
      box-shadow: 0 6px 12px rgba(156, 131, 120, 0.3);
    }
    
    .btn i {
      font-size: 18px;
    }
    
    .footer {
      text-align: center;
      color: #888;
      margin-top: 60px;
      padding: 20px 0;
      font-size: 14px;
      border-top: 1px solid var(--secondary-color);
    }
    
    .chart-container {
      width: 100%;
      height: 300px;
    }
    
    .chart-title {
      font-family: var(--header-font);
      font-size: 20px;
      color: var(--primary-color);
      margin-bottom: 20px;
    }

    @media (max-width: 1024px) {
      .insights-section {
        grid-column: span 12;
      }
      
      .chart-section {
        grid-column: span 12;
      }
      
      .dashboard-insights {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 768px) {
      .nav-links {
        display: none;
      }
      
      .mobile-menu {
        display: block;
      }
      
      .page-title {
        font-size: 26px;
        margin: 30px 0 20px;
      }
      
      .dashboard-insights {
        grid-template-columns: 1fr;
      }
      
      .metric h2 {
        font-size: 16px;
      }
      
      .metric p {
        font-size: 22px;
      }
      
      .container {
        padding: 0 16px;
      }
    }
  </style>
</head>
<body>
  <header class="salon-header">
    <div class="container">
      <a href="/admin/dashboard" class="logo">
        <i class="fas fa-spa"></i>
        <span>L'Oasis ‚Äì Votre Instant Beaut√©</span>
      </a>
      <nav class="nav-links">
        <a href="/admin/dashboard" class="nav-link active ">Tableau de Bord</a>
        <a href="/admin/commandes" class="nav-link">Commandes</a>
        <a href="/admin/rdvs" class="nav-link">RDV</a>
        <a href="/admin/services" class="nav-link">Services</a>
        <a href="/admin/produits" class="nav-link">Produits</a>
        <a href="/admin/employes" class="nav-link">Employ√©s</a> 
      </nav>
    </div>
  </header>

 <!-- Main Content -->
<div class="container">
  <h1 class="page-title">Tableau de Bord Administrateur</h1>

  <div class="dashboard-grid">
    <!-- Metrics Section -->
    <div class="metrics-section">
      <div class="dashboard-metrics">
        <div class="metric">
          <div class="metric-icon">
            <i class="fas fa-shopping-bag"></i>
          </div>
          <h2>Total Commandes</h2>
          <p><%= totalCommandes %></p>
        </div>
        <div class="metric">
          <div class="metric-icon">
            <i class="fas fa-hourglass-half"></i>
          </div>
          <h2>Commandes en Attente</h2>
          <p><%= commandesEnAttente %></p>
        </div>
        <div class="metric">
          <div class="metric-icon">
            <i class="fas fa-check-circle"></i>
          </div>
          <h2>Commandes Accept√©es</h2>
          <p><%= commandesAcceptees %></p>
        </div>
        <div class="metric">
          <div class="metric-icon">
            <i class="far fa-calendar-check"></i>
          </div>
          <h2>RDVs en Attente</h2>
          <p><%= rdvsEnAttente %></p>
        </div>
        <div class="metric">
          <div class="metric-icon">
            <i class="fas fa-hand-holding-usd"></i>
          </div>
          <h2>Total Revenus</h2>
          <p><%= totalRevenus %> DA</p>
        </div>
      </div>
    </div>

    <!-- Chart Section -->
    <div class="chart-section">
      <h2 class="chart-title">
        <i class="fas fa-chart-line"></i> Performance des 30 derniers jours
      </h2>
      <div class="chart-container">
        <canvas id="revenusChart"></canvas>
      </div>
    </div>

    <!-- Insights Section -->
    <div class="insights-section">
      <h2 class="section-title">Insights Business</h2>
      <div class="dashboard-insights">
        <div class="insight">
          <div class="insight-header">
            <div class="insight-icon">
              <i class="fas fa-crown"></i>
            </div>
            <h2>Produit le plus vendu</h2>
          </div>
          <p><%= produitTop %></p>
        </div>
        <div class="insight">
          <div class="insight-header">
            <div class="insight-icon">
              <i class="fas fa-calendar-day"></i>
            </div>
            <h2>Jour le plus fr√©quent√©</h2>
          </div>
          <p><%= jourTop %></p>
        </div>
        <div class="insight">
          <div class="insight-header">
            <div class="insight-icon">
              <i class="far fa-clock"></i>
            </div>
            <h2>Heure de pointe</h2>
          </div>
          <p><%= heureTop %>h</p>
        </div>
        <div class="insight">
          <div class="insight-header">
            <div class="insight-icon">
              <i class="fas fa-star"></i>
            </div>
            <h2>Service le plus demand√©</h2>
          </div>
          <p><%= serviceTop %></p>
        </div>
      </div>
    </div>

    <!-- Quick Links Section -->
    <div class="quick-links-section">
      <h2 class="section-title">Acc√®s Rapide</h2>
      <div class="dashboard-links">
        <a href="/admin/contacts" class="btn">
          <i class="fas fa-envelope"></i> Contacts
        </a>
        <a href="/admin/recruitment" class="btn">
          <i class="fas fa-file-alt"></i> Candidatures
        </a>
        <a href="/admin/settings" class="btn">
          <i class="fas fa-cog"></i> Param√®tres
        </a>
        <a href="/admin/analytics" class="btn">
          <i class="fas fa-chart-pie"></i> Analyses
        </a>
      </div>
    </div>
  </div>
</div>

<footer class="footer">
  <div class="container">
    <p>&copy; 2025 L'Oasis Beaut√© - Tous droits r√©serv√©s</p>
  </div>
</footer>

<script>
  const revenusParJour = [
    { date: '2025-04', commandes: 42, revenus: 85000 },
    { date: '2025-03', commandes: 38, revenus: 79000 },
    { date: '2025-02', commandes: 45, revenus: 92000 },
    { date: '2025-01', commandes: 30, revenus: 68000 },
    { date: '2024-12', commandes: 52, revenus: 105000 },
    { date: '2024-11', commandes: 48, revenus: 98000 }
  ];

  const labels = revenusParJour.map(r => {
    const [year, month] = r.date.split('-');
    return `${month}/${year}`;
  });

  const commandesData = revenusParJour.map(r => r.commandes);
  const revenusData = revenusParJour.map(r => r.revenus);

  const ctx = document.getElementById('revenusChart').getContext('2d');
  new Chart(ctx, {
    type: 'line',
    data: {
      labels: labels,
      datasets: [
        {
          label: 'Commandes',
          data: commandesData,
          borderColor: 'rgba(156, 131, 120, 1)',
          backgroundColor: 'rgba(156, 131, 120, 0.2)',
          tension: 0.4,
          borderWidth: 3,
          pointRadius: 4,
          pointBackgroundColor: 'rgba(156, 131, 120, 1)',
          yAxisID: 'y1',
        },
        {
          label: 'Revenus (DA)',
          data: revenusData,
          borderColor: 'rgba(193, 154, 107, 1)',
          backgroundColor: 'rgba(193, 154, 107, 0.2)',
          tension: 0.4,
          borderWidth: 3,
          pointRadius: 4,
          pointBackgroundColor: 'rgba(193, 154, 107, 1)',
          yAxisID: 'y2',
        }
      ]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      interaction: {
        mode: 'index',
        intersect: false
      },
      plugins: {
        legend: {
          position: 'top',
          labels: {
            boxWidth: 12,
            font: {
              family: "'Montserrat', sans-serif",
              size: 12
            }
          }
        },
      },
      scales: {
        y1: {
          type: 'linear',
          position: 'left',
          title: {
            display: true,
            text: 'Commandes',
            font: {
              family: "'Montserrat', sans-serif"
            }
          },
          grid: {
            drawOnChartArea: false
          }
        },
        y2: {
          type: 'linear',
          position: 'right',
          title: {
            display: true,
            text: 'Revenus (DA)',
            font: {
              family: "'Montserrat', sans-serif"
            }
          },
          grid: {
            drawOnChartArea: true
          }
        },
        x: {
          grid: {
            display: false
          }
        }
      }
    }
  });

  // Mobile menu toggle (simplified)
  document.querySelector('.mobile-menu').addEventListener('click', function() {
    const navLinks = document.querySelector('.nav-links');
    navLinks.style.display = navLinks.style.display === 'flex' ? 'none' : 'flex';
  });
</script>
