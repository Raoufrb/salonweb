      --header-font: 'Playfair Display', Georgia, serif;
      --body-font: 'Montserrat', 'Segoe UI', sans-serif;
    }
    
    body {
      font-family: var(--body-font);
      background-color: var(--light-bg);
      color: var(--text-color);
      margin: 0;
      padding: 0;
      line-height: 1.6;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }
    
    .salon-header {
      background-color: white;
      box-shadow: 0 2px 15px rgba(0,0,0,0.08);
      padding: 15px 0;
      position: relative;
    }
    
    .salon-header .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo {
      font-family: var(--header-font);
      font-size: 28px;
      color: var(--primary-color);
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .logo i {
      color: var(--accent-color);
    }
    
    .nav-links {
      display: flex;
      gap: 20px;
    }
    
    .nav-link {
      color: var(--text-color);
      text-decoration: none;
      font-weight: 500;
      padding: 5px 10px;
      border-radius: 4px;
      transition: all 0.3s ease;
    }
    
    .nav-link:hover {
      background-color: var(--secondary-color);
      color: var(--primary-color);
    }
    
    .nav-link.active {
      background-color: var(--primary-color);
      color: white;
    }
    
    h1, .page-title {
      font-family: var(--header-font);
      text-align: center;
      color: var(--primary-color);
      margin: 30px 0;
      font-size: 32px;
      font-weight: normal;
      position: relative;
    }
    
    h1::after, .page-title::after {
      content: "";
      display: block;
      width: 80px;
      height: 3px;
      background-color: var(--accent-color);
      margin: 15px auto;
    }

    /* Dashboard specific styles */
    .dashboard-metrics {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
    }

    .metric {
      background: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 2px 20px rgba(0,0,0,0.05);
      text-align: center;
      transition: transform 0.3s ease;
    }
    
    .metric:hover {
      transform: translateY(-5px);
    }

    .metric h2 {
      font-family: var(--header-font);
      font-size: 18px;
      color: var(--primary-color);
      margin-bottom: 10px;
    }

    .metric p {
      font-size: 24px;
      font-weight: bold;
      color: var(--accent-color);
      margin: 0;
    }

    .dashboard-links {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 16px;
      margin-bottom: 30px;
    }

    .btn {
      display: block;
      text-align: center;
      padding: 12px 16px;
      background-color: var(--primary-color);
      color: white;
      font-weight: 500;
      border-radius: 6px;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .btn:hover {
      background-color: #876d62;
      transform: translateY(-2px);
    }
    
    .footer {
      text-align: center;
      color: #888;
      margin-top: 40px;
      padding: 20px 0;
      font-size: 14px;
      border-top: 1px solid var(--secondary-color);
    }

    @media (max-width: 768px) {
      .nav-links {
        display: none;
      }
      
      h1 {
        font-size: 26px;
      }
      
      .metric h2 {
        font-size: 16px;
      }
      
      .metric p {
        font-size: 20px;
      }
    }
  </style>
</head>
