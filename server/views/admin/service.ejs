<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestion des Services</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="header">
    <a href="/admin/dashboard" class="btn btn-primary">Retour au Tableau de Bord</a>
  </div>

  <h1>Gestion des Services</h1>

  <!-- Formulaire d'ajout -->
  <h2>âž• Ajouter un Service</h2>
  <form action="/admin/services" method="POST" enctype="multipart/form-data" class="form-add">
    <div class="form-group">
      <label for="name">Nom du Service</label>
      <input type="text" id="name" name="name" placeholder="Nom du service" required />
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description" placeholder="Description du service" required></textarea>
    </div>
    <div class="form-group">
      <label for="price">Prix</label>
      <input type="number" id="price" step="0.01" name="price" placeholder="Prix" required />
    </div>
    <div class="form-group">
      <label for="category">CatÃ©gorie</label>
      <select id="category" name="category" required>
        <option value="hair">Coiffure</option>
        <option value="spa">Spa</option>
        <option value="nails">Onglerie</option>
      </select>
    </div>
    <div class="form-group">
      <label for="gender">Genre</label>
      <select id="gender" name="gender" required>
        <option value="women">Femmes</option>
        <option value="men">Hommes</option>
        <option value="all">Tous</option>
      </select>
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      <input type="file" id="image" name="image" accept="image/*" />
    </div>
    <button type="submit" class="btn btn-success">Ajouter</button>
  </form>

  <!-- Liste des services -->
  <h2>ðŸ“‹ Liste des Services</h2>
  <% if (services.length === 0) { %>
    <p>Aucun service trouvÃ©.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Nom</th>
          <th>Description</th>
          <th>Prix</th>
          <th>CatÃ©gorie</th>
          <th>Genre</th>
          <th>Image</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% services.forEach(service => { %>
          <tr>
            <td><%= service.id %></td>
            <td><%= service.name %></td>
            <td><%= service.description %></td>
            <td><%= service.price %> â‚¬</td>
            <td><%= service.category %></td>
            <td><%= service.gender %></td>
            <td>
              <% if (service.image_url) { %>
                <img src="/uploads/services/<%= service.image_url %>" alt="<%= service.name %>" width="100">
              <% } else { %>
                <span>Aucune image</span>
              <% } %>
            </td>
            <td>
              <!-- Update Button -->
              <form action="/admin/services/<%= service.id %>?_method=PUT" method="POST" class="form-inline">
                <input type="text" name="name" value="<%= service.name %>" required />
                <textarea name="description" required><%= service.description %></textarea>
                <input type="number" step="0.01" name="price" value="<%= service.price %>" required />
                <select name="category" required>
                  <option value="hair" <%= service.category === 'hair' ? 'selected' : '' %>>Coiffure</option>
                  <option value="spa" <%= service.category === 'spa' ? 'selected' : '' %>>Spa</option>
                  <option value="nails" <%= service.category === 'nails' ? 'selected' : '' %>>Onglerie</option>
                </select>
                <select name="gender" required>
                  <option value="women" <%= service.gender === 'women' ? 'selected' : '' %>>Femmes</option>
                  <option value="men" <%= service.gender === 'men' ? 'selected' : '' %>>Hommes</option>
                  <option value="all" <%= service.gender === 'all' ? 'selected' : '' %>>Tous</option>
                </select>
                <button type="submit" class="btn btn-primary">Modifier</button>
              </form>

              <!-- Delete Button -->
              <form action="/admin/services/<%= service.id %>?_method=DELETE" method="POST" class="form-inline">
                <button type="submit" class="btn btn-danger" onclick="return confirm('ÃŠtes-vous sÃ»r de vouloir supprimer ce service ?')">Supprimer</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</body>
</html>